<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="طلب دكتور"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />


    <Spinner
        android:id="@+id/do_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/spinner_design"
        android:hint="اختار تخصص الاستشارة"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:id="@+id/texxxxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اختار التخصص"
        app:layout_constraintBottom_toBottomOf="@+id/do_spinner"
        app:layout_constraintEnd_toEndOf="@+id/do_spinner"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="@+id/do_spinner"
        app:layout_constraintTop_toTopOf="@+id/do_spinner"
        app:layout_constraintVertical_bias="0.476" />

    <EditText
        android:id="@+id/patName"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/shape1"
        android:gravity="center"
        android:hint="اكتب اسم المريض"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/do_spinner"
        app:layout_constraintVertical_bias="0.1" />


    <EditText
        android:id="@+id/patAddress"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/shape1"
        android:gravity="center"
        android:hint="اكتب العنوان"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patName"
        app:layout_constraintVertical_bias="0.118" />

    <EditText
        android:id="@+id/patPhone"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/shape1"
        android:hint="رقم التليفون"
        android:gravity="center"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patAddress"
        app:layout_constraintVertical_bias="0.184" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/patSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_botton"
        android:text="Send"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patPhone"
        app:layout_constraintVertical_bias="0.389" />


</androidx.constraintlayout.widget.ConstraintLayout>